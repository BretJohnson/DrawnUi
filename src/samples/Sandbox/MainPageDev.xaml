<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    x:Class="MauiNet8.MainPageDev"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Sandbox.Views.Controls"
    xmlns:draw="http://schemas.appomobi.com/drawnUi/2023/draw"
    xmlns:mauiNet8="using:MauiNet8"
    xmlns:views="clr-namespace:Sandbox.Views"
    xmlns:xaml2Pdf="clr-namespace:Sandbox.Views.Xaml2Pdf"
    BackgroundColor="Gray">

    <draw:Canvas
        Gestures="Enabled"
        HardwareAcceleration="Enabled"
        HorizontalOptions="Fill"
        Tag="MainPage"
        VerticalOptions="Fill">

        <draw:SkiaLayout
            HorizontalOptions="Fill"
            Tag="Wrapper"
            VerticalOptions="Fill">

            <draw:SkiaLayout
                HorizontalOptions="Fill"
                VerticalOptions="Fill">


                <!--<draw:SkiaShape
                    Margin="16"
                    BackgroundColor="#88CC0033"
                    CornerRadius="20"
                    HorizontalOptions="Center"
                    LockRatio="1"
                    Opacity="0.93"
                    Rotation="12"
                    StrokeColor="GreenYellow"
                    StrokeWidth="4"
                    TranslationX="0"
                    Type="Rectangle"
                    UseCache="Image"
                    VerticalOptions="Center"
                    WidthRequest="80"/>-->

                <draw:SkiaImage
                    Aspect="AspectCover"
                    HeightRequest="100"
                    HorizontalOptions="Center"
                    RescalingQuality="High"
                    Rotation="12"
                    Source="Images/nico.jpg"
                    VerticalOptions="Center"
                    WidthRequest="100" />



            </draw:SkiaLayout>

            <controls:ButtonToRoot />

            <draw:SkiaLabelFps
                Margin="0,0,4,24"
                BackgroundColor="DarkRed"
                ForceRefresh="False"
                HorizontalOptions="End"
                Rotation="-45"
                TextColor="White"
                VerticalOptions="End"
                ZIndex="100" />

        </draw:SkiaLayout>

    </draw:Canvas>

</views:BasePage>
