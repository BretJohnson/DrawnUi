<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    x:Class="MauiNet8.MainPageDev"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Sandbox.Views.Controls"
    xmlns:draw="http://schemas.appomobi.com/drawnUi/2023/draw"
    xmlns:views="clr-namespace:Sandbox.Views"
    xmlns:xaml2Pdf="clr-namespace:Sandbox.Views.Xaml2Pdf"
    xmlns:mauiNet8="using:MauiNet8"
    BackgroundColor="Gray">

    <Grid
        Padding="0,0,0,8"
        HorizontalOptions="Fill"
        VerticalOptions="FillAndExpand">

        <draw:Canvas
            Margin="8,44"
            BackgroundColor="#66000000"
            Gestures="Enabled"
            HardwareAcceleration="Enabled"
            HorizontalOptions="Fill"
            Tag="Warning"
            VerticalOptions="Center">

            <draw:SkiaScroll
                BackgroundColor="Red"
                HorizontalOptions="Fill"
                VerticalOptions="Start">
                <draw:SkiaLayout HorizontalOptions="Fill">

                    <mauiNet8:BuggedLayout
                        Padding="6"
                        BackgroundColor="Blue"
                        HorizontalOptions="Fill"
                        Tag="VStack"
                        Type="Column"
                        UseCache="ImageDoubleBuffered">

                        <!--  REPORT  -->
                        <xaml2Pdf:ReportSample
                            Margin="20"
                            BackgroundColor="White"
                            HorizontalOptions="Center" />

                    </mauiNet8:BuggedLayout>

                </draw:SkiaLayout>
            </draw:SkiaScroll>

        </draw:Canvas>


    </Grid>

</views:BasePage>
