<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    x:Class="MauiNet8.MainPageDev"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Sandbox.Views.Controls"
    xmlns:draw="http://schemas.appomobi.com/drawnUi/2023/draw"
    xmlns:views="clr-namespace:Sandbox.Views"
    xmlns:xaml2Pdf="clr-namespace:Sandbox.Views.Xaml2Pdf"
    BackgroundColor="Gray">

    <Grid
        Padding="0,0,0,8"
        HorizontalOptions="Fill"
        VerticalOptions="FillAndExpand">

        <draw:Canvas
            Margin="8,44"
            BackgroundColor="#66000000"
            Gestures="Enabled"
            HardwareAcceleration="Enabled"
            HorizontalOptions="Fill"
            Tag="Warning"
            VerticalOptions="Center">

            <draw:SkiaScroll
                HorizontalOptions="Fill"
                VerticalOptions="Start">
                <draw:SkiaLayout HorizontalOptions="Fill">

                    <draw:SkiaLayout
                        Padding="6"
                        BackgroundColor="Blue"
                        HorizontalOptions="Fill"
                        Tag="VStack"
                        Type="Column"
                        UseCache="ImageComposite">

                        <!--  TITLE  -->
                        <draw:SkiaLabel
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            Text="For PDF we will not use the rendered image that you already see below, but we will instantiate the report from scratch."
                            TextColor="Yellow" />

                        <!--  REPORT  -->
                        <xaml2Pdf:ReportSample
                            BackgroundColor="White"
                            HorizontalOptions="Center" />

                        <draw:SkiaLayout
                            ColumnDefinitions="1*,1*"
                            HorizontalOptions="Fill"
                            RowDefinitions="Auto"
                            Type="Grid">

                            <!--  BTN A4  -->
                            <controls:SmallButton
                                Margin="0,16"
                                HorizontalOptions="Center"
                                Text="Create Pdf A4" />

                            <!--  BTN  A6  -->
                            <controls:SmallButton
                                Grid.Column="1"
                                Margin="0,16"
                                HorizontalOptions="Center"
                                Text="Create Pdf A6" />
                        </draw:SkiaLayout>

                    </draw:SkiaLayout>

                </draw:SkiaLayout>
            </draw:SkiaScroll>

        </draw:Canvas>


    </Grid>

</views:BasePage>
