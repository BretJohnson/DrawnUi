<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    x:Class="MauiNet8.MainPageDev"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Sandbox.Views.Controls"
    xmlns:draw="http://schemas.appomobi.com/drawnUi/2023/draw"
    xmlns:sandbox="clr-namespace:Sandbox"
    xmlns:strings="clr-namespace:Sandbox.Resources.Strings"
    xmlns:views="clr-namespace:Sandbox.Views"
    xmlns:xaml2Pdf="clr-namespace:Sandbox.Views.Xaml2Pdf"
    x:DataType="sandbox:MainPageViewModel"
    BackgroundColor="Gray">

    <Grid
        Padding="0,0,0,8"
        HorizontalOptions="Fill"
        VerticalOptions="FillAndExpand">

        <draw:Canvas
            Margin="8,44"
            BackgroundColor="#66000000"
            Gestures="Enabled"
            HorizontalOptions="Fill"
            Tag="Warning"
            VerticalOptions="Center">

            <draw:SkiaScroll
                HorizontalOptions="Fill"
                VerticalOptions="Start">
                <draw:SkiaLayout HorizontalOptions="Fill">

                    <draw:SkiaLayout
                        Padding="6"
                        BackgroundColor="DarkBlue"
                        HorizontalOptions="Fill"
                        Tag="VStack"
                        Type="Column">


                        <!--  TITLE  -->
                        <draw:SkiaLabel
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            Text="For PDF we will not use the rendered image that you already see below, but we will instantiate the report from scratch."
                            TextColor="Yellow" />

                        <!--  REPORT  -->
                        <xaml2Pdf:ReportSample
                            BackgroundColor="White"
                            HorizontalOptions="Center" />

                        <!--  BTN  -->
                        <controls:SmallButton
                            Margin="0,16"
                            HorizontalOptions="Center"
                            Tapped="SkiaButton_OnTapped"
                            Text="Create Pdf" />

                    </draw:SkiaLayout>
                </draw:SkiaLayout>
            </draw:SkiaScroll>

        </draw:Canvas>


    </Grid>

</views:BasePage>
