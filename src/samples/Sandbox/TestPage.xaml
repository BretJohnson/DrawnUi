                        HeightRequest="16"
                        LockRatio="1"
                        BackgroundColor="Black"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Type="Path" />

                </draw:SkiaShape>-->

                <draw:SkiaLabelFps
                    Margin="0,0,4,24"
                    BackgroundColor="DarkRed"
                    HorizontalOptions="End"
                    Rotation="-45"
                    TextColor="White"
                    VerticalOptions="End"
                    ZIndex="100">

                </draw:SkiaLabelFps>

            </draw:SkiaLayout>

        </draw:Canvas>
    </Grid>

</views:BasePage>
